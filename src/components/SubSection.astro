---
import P from "./P.astro";
import A from "./A.astro";

interface Props {
  title?: string;
  link?: string;
  subtitle?: string;
}

const { title, subtitle, link } = Astro.props;
---

<div class="md:px-4 sm:px-8 mt-2">
  <h3 class="text-3xl mb-4">
    {title && (link ? <A href={link}>{title}</A> : title)}
  </h3>
  <P>
    {
      subtitle && (
        <>
          <i>{subtitle}</i>
          <br />
        </>
      )
    }

    <slot />
  </P>
</div>
